{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"clean": {
			"cache": false
		},
		"lint": {
			"cache": false
		},
		"publish": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
